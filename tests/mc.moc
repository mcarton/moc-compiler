// function showing pointer manipulation
Int foo(Int n){
    // declare without initialising
    Int xxx;
    xxx = 100;
    // declare and initialise
    Int a = n+999;
    // declare a pointer
    Int* m = malloc(1);
    a = *m +666;
    // declare a pointer of pointer
    Int ** k = new(Int*);
    *k = m;
    ** k = 12;
    Int b = **k + 9999;
    // cast
    m = (Int*)malloc(10);
    return *m;
}

// function returning a pointer
Int* ref(Int x){
    Int* p = malloc(x);
    return p;
}

// function showing arithmetic expressions
Int bar(Int a, Int b){
    Int u = 301;
    Int v = 401;
